{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Animals Impacted by 2019â€“20 Australian Bushfires",
    "fontSize": 18,
    "fontWeight": "bold",
    "anchor": "start",
    "color": "#222"
  },
  "width": 400,
  "height": 400,
  "data": {
    "url": "bushfire/data/bushfire_animal_impacts.csv"
  },
  "transform": [
    {
      "filter": "datum.Category != 'Total (vertebrates)'"
    }
  ],
  "mark": {"type": "arc", "innerRadius": 100, "outerRadius": 180},
  "encoding": {
    "theta": {
      "field": "Number_impacted",
      "type": "quantitative",
      "title": "Animals Impacted"
    },
    "color": {
      "field": "Category",
      "type": "nominal",
      "title": "Animal Group",
      "scale": {
        "range": ["#D55E00", "#E69F00", "#56B4E9", "#009E73"]
      }
    },
    "tooltip": [
      {"field": "Category", "title": "Animal Group"},
      {"field": "Number_impacted", "title": "Number Impacted"},
      {"field": "Notes", "title": "Details"},
      {"field": "Source", "title": "Source"}
    ]
  },
  "config": {
    "background": "#fafafa",
    "legend": {"titleFontSize": 12, "labelFontSize": 11},
    "view": {"stroke": null},
    "title": {"font": "Arial"}
  }
}
