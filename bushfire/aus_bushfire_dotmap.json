{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "autosize": { "type": "fit", "resize": true },
  "title": {
    "text": "Fire Hotspots Across Australia (2016–2021)",
    "subtitle": "Each point represents a NASA VIIRS hotspot — filtered by brightness and confidence.",
    "anchor": "start",
    "fontSize": 16,
    "subtitleFontSize": 12
  },

  "projection": {
    "type": "mercator",
    "center": [134, -25],
    "scale": 800
  },

  "params": [
    {
  "name": "confidence_min",
  "value": 30,
  "bind": {
    "input": "select",
    "options": [0, 30, 50, 70, 90, 100],
    "name": "Minimum Confidence (%): "
  }
    },
    {
      "name": "brightness_min",
      "value": 300,
      "bind": {
        "input": "range",
        "min": 300,
        "max": 500,
        "step": 5,
        "name": "Minimum Brightness: "
      }
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [{ "filter": "datum.properties.NAME == 'Australia'" }],
      "mark": { "type": "geoshape", "fill": "#f5f5f5", "stroke": "#ccc" }
    },
    {
      "data": { "url": "bushfire/data/fire_archive_M6_96619.csv" },
      "transform": [
        { "filter": "datum.confidence >= confidence_min" },
        { "filter": "datum.brightness >= brightness_min" }
      ],
      "mark": { "type": "circle", "opacity": 0.8, "size": 45 },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "color": {
          "field": "brightness",
          "type": "quantitative",
          "title": "Brightness",
          "scale": {
            "range": ["#ffffb2", "#fecc5c", "#fd8d3c", "#e31a1c", "#800026"]
          },
          "legend":  {  "format"  :  ".1s"  } 
        },
        "tooltip": [
          { "field": "acq_date", "type": "temporal", "title": "Date" },
          { "field": "acq_time", "type": "ordinal", "title": "Time (UTC)" },
          { "field": "confidence", "type": "quantitative", "title": "Confidence (%)" },
          { "field": "frp", "type": "quantitative", "title": "Fire Radiative Power (MW)" },
          { "field": "daynight", "type": "nominal", "title": "Day / Night" },
          { "field": "brightness", "type": "quantitative", "title": "Brightness" }
        ]
      }
    }
  ]
}








